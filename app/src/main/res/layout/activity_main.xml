<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="3dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dayList"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/startDate"/>
    <TextView
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/startDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/startDateLabel"/>
    <TextView
            android:text="Start date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDateLabel" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/startDate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Add Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/addDay" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:onClick="onClick"/>
</android.support.constraint.ConstraintLayout>